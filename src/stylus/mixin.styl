@import "base.styl"

// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

//文字溢出
overflow-nowrap()
  overflow:hidden
  white-space: nowrap
  text-overflow: ellipsis
  
o-hs()
  text-overflow:-o-ellipsis-lastline;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;

o-hs-2()
  o-hs()
  -webkit-line-clamp 2
  
// 标题
title()
  color: $color-text
  font-size: $font-size-title-x
  font-weight: bold
  
border-t-radius()
  border-top-left-radius 4px
  border-top-right-radius 4px
  
menu-active()
  background $font-color-menu-background
  a
    color #fff

bs()
  box-shadow: 0 1px 5px $color-aux
